{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/VinuChain/vinuchain-lists/schemas/contract.schema.json",
  "title": "Contract Project Info",
  "description": "Schema for contract project info.json files",
  "type": "object",
  "required": [
    "name",
    "website",
    "contracts"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Project name",
      "minLength": 1,
      "maxLength": 100
    },
    "website": {
      "type": "string",
      "description": "Project website HTTPS URL",
      "pattern": "^https://[a-zA-Z0-9]([a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(\\.[a-zA-Z0-9]([a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*(/[^\\s]*)?$",
      "maxLength": 500
    },
    "description": {
      "type": "string",
      "description": "Project description",
      "minLength": 1,
      "maxLength": 500
    },
    "contact": {
      "type": "string",
      "description": "Contact email address",
      "format": "email",
      "maxLength": 320
    },
    "security": {
      "type": "string",
      "description": "Security contact email address",
      "format": "email",
      "maxLength": 320
    },
    "contracts": {
      "type": "array",
      "description": "List of all contract addresses in this project",
      "minItems": 1,
      "maxItems": 50,
      "items": {
        "type": "object",
        "required": [
          "name",
          "address",
          "type"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Contract name in PascalCase (e.g., 'Factory', 'Router')",
            "pattern": "^[A-Z][a-zA-Z0-9]*$",
            "minLength": 1,
            "maxLength": 100
          },
          "address": {
            "type": "string",
            "description": "EIP-55 checksummed contract address",
            "pattern": "^0x[a-fA-F0-9]{40}$"
          },
          "type": {
            "type": "string",
            "description": "Contract type",
            "enum": [
              "token",
              "factory",
              "router",
              "controller",
              "manager",
              "quoter",
              "helper",
              "oracle",
              "vault",
              "staking",
              "governance",
              "bridge",
              "nft",
              "pair",
              "pool",
              "other"
            ]
          },
          "description": {
            "type": "string",
            "description": "Contract description",
            "minLength": 1,
            "maxLength": 200
          }
        },
        "additionalProperties": false
      }
    },
    "social": {
      "type": "object",
      "description": "Social media links",
      "properties": {
        "github": {
          "type": "string",
          "description": "GitHub organization or repository HTTPS URL",
          "pattern": "^https://github\\.com/[a-zA-Z0-9_-]+(/[a-zA-Z0-9_.-]+)?/?$",
          "maxLength": 500
        },
        "twitter": {
          "type": "string",
          "description": "Twitter/X profile HTTPS URL",
          "pattern": "^https://(twitter\\.com|x\\.com)/[a-zA-Z0-9_]+$",
          "maxLength": 500
        },
        "telegram": {
          "type": "string",
          "description": "Telegram channel or group URL",
          "pattern": "^https://t\\.me/[a-zA-Z0-9_]+$",
          "maxLength": 500
        },
        "discord": {
          "type": "string",
          "description": "Discord server invite HTTPS URL",
          "pattern": "^https://(discord\\.gg|discord\\.com/invite)/[a-zA-Z0-9]+$",
          "maxLength": 500
        },
        "medium": {
          "type": "string",
          "description": "Medium publication HTTPS URL",
          "pattern": "^https://medium\\.com/@[a-zA-Z0-9_-]+(/[^\\s]*)?$",
          "maxLength": 500
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
